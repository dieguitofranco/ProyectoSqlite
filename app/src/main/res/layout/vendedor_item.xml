<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgPerson"
        android:layout_width="152dp"
        android:layout_height="115dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textNameVI"
        android:layout_width="208dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:text="Nombre"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imgPerson"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textIdVI"
        android:layout_width="203dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Id"
        app:layout_constraintEnd_toEndOf="@+id/textNameVI"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textNameVI"
        app:layout_constraintTop_toBottomOf="@+id/textNameVI" />

    <TextView
        android:id="@+id/textTelI"
        android:layout_width="202dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="TelÃ©fono"
        app:layout_constraintEnd_toEndOf="@+id/textIdVI"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textIdVI"
        app:layout_constraintTop_toBottomOf="@+id/textIdVI" />

</androidx.constraintlayout.widget.ConstraintLayout>