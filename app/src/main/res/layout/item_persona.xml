<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgPerson"
            android:layout_width="115dp"
            android:layout_height="132dp"
            android:scaleType="centerCrop"
            card_view:srcCompat="@android:drawable/ic_menu_report_image" />

        <TextView
            android:id="@+id/textNamePerson"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/imgPerson"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <TextView
            android:id="@+id/textDocument"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textNamePerson"
            android:layout_alignLeft="@+id/textNamePerson"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="3dp"
            android:text="Document"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDocument"
            android:layout_alignLeft="@+id/textDocument"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:text="Email"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textPhone"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textEmail"
            android:layout_alignLeft="@+id/textEmail"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="6dp"
            android:text="Telephone"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textEdad"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textPhone"
            android:layout_alignLeft="@+id/textPhone"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:text="Edad"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/compartir"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_share"
            android:background="@color/material_blue_grey_800" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>